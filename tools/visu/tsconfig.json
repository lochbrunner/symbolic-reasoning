{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "declaration": false,
        "removeComments": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "outDir": "build",
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "baseUrl": "src",
        "paths": {},
        "typeRoots": [
            "./node_modules/@types",
            "./tools/visu/types"
        ]
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}